<div class="flex flex-col items-center gap-3">
   <h2 class="font-bold text-lg text-sky-700/80">Add Transaction</h2> 
   <div class="flex flex-col">
   <span>
   <%= form_with  model: @expense , url: expenses_path do |t|%>
    <%= t.label :Category, class: 'text-lg' %>
    <%= t.select  :category_id, @category.map {|cat| [cat.name, cat.id]},{} , class:'ml-4 mt-2 w-28 p-1 rounded-sm border border-cyan-300' %> <br>
    </span>
    <span>
    <%= t.label :name%>
    <%= t.text_field :name, class: 'ml-4 mt-2  w-56 p-1 rounded-sm border border-cyan-300', require: true , placeholder: "Enter Name" %><br>
    </span>
    <span>
    <%= t.label :amount %>
    <%= t.number_field :amount , class: 'mt-2 w-56 p-1 rounded-sm border border-cyan-300', require: true, placeholder: 'Enter Amount' %><br>
    </span>
    </div>
    
    <div class="flex gap-2 mt-4">
    <%= t.submit " Save", class:'border border-blue-300 shadow-sm shadow-sky-300 bg-blue-400 p-2 rounded-lg cursor-pointer hover:bg-blue-500 w-40 justify-center flex' %> <br>
   <% end %>
   <%= link_to"add category ", new_category_path, class:'border border-blue-300 shadow-sm shadow-sky-300 bg-blue-400 p-2 rounded-lg cursor-pointer hover:bg-blue-500 w-40 justify-center flex'%>
  </div>
  </div>
