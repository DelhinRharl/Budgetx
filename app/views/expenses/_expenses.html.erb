<div class="flex flex-col">
<%= form_with  model: @expense , url: expenses_path do |t|%>
    <%= t.select  :category_id, @category.map {|cat| [cat.name, cat.id]},{} %>
    <%= t.label :name %>
    <%= t.text_field :name %>
    <%= t.label :amount %>
    <%= t.number_field :amount %>
    <div class="flex gap-9 mt-4">
    <%= t.submit " Save", class: 'border border-black p-2 rounded-lg cursor-pointer hover:opacity-60' %>
   <% end %>
   <%= link_to"add category ", new_category_path, class:'border border-black p-2 w-32 rounded-lg cursor-pointer hover:opacity-60'%>
  </div>
  </div>
